<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeActivity"
    android:background="#FCC6FA"
    >
    <TextView
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:layout_height="50dp"
        android:text="~~edit your pix~~"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/btn_cam"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cam"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/btn_gall"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_toRightOf="@id/btn_cam"
            android:background="@drawable/gall"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isha Madan \n1031310792"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
